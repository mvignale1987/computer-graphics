<?xml version="1.0" encoding="utf-8"?>
<scene>
  <backgroundColor>#FF8000</backgroundColor>
  <resolution>800 600</resolution>
  <outputDir>%DESKTOP%\Raytracer</outputDir>

  <!-- Luces de la escena -->
  <lights>
    <light id="light0">
      <position>-10 10 5</position>
      <ambientColor>#FFFFFF</ambientColor>
      <diffuseColor>#FFFFFF</diffuseColor>
      <linearAttenuation>0.01</linearAttenuation>
      <quadAttenuation>0.01</quadAttenuation>
    </light>
    <light id="light1">
      <position>10 10 10</position>
      <ambientColor>#FFFFFF</ambientColor>
      <diffuseColor>#FFFFFF</diffuseColor>
      <linearAttenuation>0.01</linearAttenuation>
      <quadAttenuation>0.01</quadAttenuation>
    </light>
  </lights>
  
  <!-- cÃ¡mara a usar en la escena -->
  <camera>
    <position>0 10 -10</position>
    <lookAt>0 0 10</lookAt>
    <up>0 1 0</up>
    <near>0.1</near>
    <far>200</far>
    <fieldOfView>60</fieldOfView>
  </camera>


  <!-- Materiales de los objetos -->
  <materials>
    <material id="red">
      <ambientColor>#FF0000</ambientColor>
      <ambientCoefficient>0.0</ambientCoefficient>
      <diffuseColor>#FF0000</diffuseColor>
      <diffuseCoefficient>1</diffuseCoefficient>
      <specularColor>#ffffff</specularColor>
      <specularCoefficient>0</specularCoefficient>
      <specularExponent>5</specularExponent>
    </material>
    <material id="green">
      <ambientColor>#00FF00</ambientColor>
      <ambientCoefficient>0.1</ambientCoefficient>
      <diffuseColor>#00FF00</diffuseColor>
      <diffuseCoefficient>0.5</diffuseCoefficient>
      <specularColor>#ffffff</specularColor>
      <specularCoefficient>0.4</specularCoefficient>
      <specularExponent>100</specularExponent>
    </material>
    <material id="white">
      <ambientColor>#000000</ambientColor>
      <ambientCoefficient>0.0</ambientCoefficient>
      <diffuseColor>#FFFFFF</diffuseColor>
      <diffuseCoefficient>0.9</diffuseCoefficient>
      <specularColor>#ffffff</specularColor>
      <specularCoefficient>0.1</specularCoefficient>
      <specularExponent>5</specularExponent>
    </material>
  </materials>

  <!-- Definiciones de primitivas y objetos que pueden ir en la escena -->
  <defs>
    <sphere id="sphere">
      <radius>3</radius>
    </sphere>
    <cyllinder id="cyllinder">
      <height>10</height>
      <radius>3</radius>
    </cyllinder>
    <quad id="planeBottom">
      <position>-20 -5 -20</position>
      <position>-20 -5 20</position>
      <position>20 -5 20</position>
      <position>20 -5 -20</position>
    </quad>
    <quad id="planeLeft">
      <position>-20 -20 -20</position>
      <position>-20 -20  20</position>
      <position>-20  20  20</position>
      <position>-20  20 -20</position>
    </quad>
    <quad id="planeRight">
      <position> 20 -20 -20</position>
      <position> 20 -20  20</position>
      <position> 20  20  20</position>
      <position> 20  20 -20</position>
    </quad>
    <quad id="planeTop">
      <position>-20 20 -20</position>
      <position>-20 20  20</position>
      <position> 20 20  20</position>
      <position> 20 20 -20</position>
    </quad>
    <quad id="planeBack">
      <position>-20 -20  20</position>
      <position>-20  20  20</position>
      <position> 20  20  20</position>
      <position> 20 -20  20</position>
    </quad>
    <triangle id="triangle">
      <position>-5  2  15</position>
      <position>5   2  15</position>
      <position>2.5 5  15</position>
    </triangle>
  </defs>

  <!-- objetos a ser renderizados en la escena -->
  <objects>
    <object def="sphere" material="green">
      <position>-5 -1 10</position>
    </object>
    <object def="cyllinder" material="green">
      <position>0 0 10</position>
      <rotation>0 90 90</rotation>
    </object>
    <object def="planeBottom" material="white"/>
    <object def="planeLeft" material="red"/>
    <object def="planeRight" material="green"/>
    <object def="planeTop" material="white"/>
    <object def="planeBack" material="white"/>
    
    <object def="triangle" material="green"/>
  </objects>
</scene>