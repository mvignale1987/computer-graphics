<?xml version="1.0" encoding="utf-8"?>
<scene>
  <backgroundColor>#ff8000</backgroundColor>
  <resolution>1920 1080</resolution>
  <outputDir>%DESKTOP%\Raytracer</outputDir>

  <!-- Luces de la escena -->
  <lights>
    <light id="light0">
      <position>0 10 0</position>
      <ambientColor>#FFFFFF</ambientColor>
      <diffuseColor>#FFFFFF</diffuseColor>
      <linearAttenuation>1</linearAttenuation>
      <quadAttenuation>1</quadAttenuation>
    </light>
  </lights>
  
  <!-- cÃ¡mara a usar en la escena -->
  <camera>
    <position>0 0 0</position>
    <rotation>0 0 0</rotation>
    <up>0 1 0</up>
    <near>0.1</near>
    <far>200</far>
    <fieldOfView>60</fieldOfView>
  </camera>


  <!-- Materiales de los objetos -->
  <materials>
    <material id="diffuseMaterial">
      <ambientColor>#00ff00</ambientColor>
      <ambientCoefficient>0.5</ambientCoefficient>
      <diffuseColor>#0000ff</diffuseColor>
      <diffuseCoefficient>1</diffuseCoefficient>
      <specularColor>#ffffff</specularColor>
      <specularCoefficient>0.5</specularCoefficient>
      <specularExponent>5</specularExponent>
    </material>
  </materials>

  <!-- Definiciones de primitivas y objetos que pueden ir en la escena -->
  <defs>
    <sphere id="sphere">
      <radius>3</radius>
    </sphere>
    <cyllinder id="cyllinder">
      <height>10</height>
      <radius>3</radius>
    </cyllinder>
    <quad id="plane">
      <position>-20 0 -20</position>
      <position>-20 0 20</position>
      <position>20 0 20</position>
      <position>20 0 -20</position>
    </quad>
    <triangle id="triangle">
      <position>-5 0 -15</position>
      <position>5 0 -15</position>
      <position>2.5 5 -15</position>
    </triangle>
  </defs>

  <!-- objetos a ser renderizados en la escena -->
  <objects>
    <object def="sphere" material="diffuseMaterial">
      <position>0 0 -5</position>
    </object>
    <object def="cyllinder" material="diffuseMaterial">
      <position>0 0 -10</position>
      <rotation>0 90 90</rotation>
    </object>
    <object def="plane" material="diffuseMaterial">
    </object>
    <object def="triangle" material="diffuseMaterial">
    </object>
  </objects>
</scene>